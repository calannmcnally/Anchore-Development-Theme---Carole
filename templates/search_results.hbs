<section class="anchore-bg p-12">
  <div class="container mx-auto flex flex-wrap items-center px-6">
    <!-- Left Column -->
    <div class="w-full lg:w-1/2 text-center lg:text-left px-0">
    	<h1 class="mb-4 anchore-hero-header">Search results for: {{query}}</h1>
        <div class="max-w-md mx-auto lg:mx-0">
          <img src="https://anchore.com/wp-content/themes/anchore/images/search-dark.svg" class="absolute z-50 mt-6 ml-4" alt="Search" width="18" height="18">
          {{search submit=false placeholder="Search for documentation here"}}
        </div>
      </div>
    </div>
</section>

<div class="container mx-auto px-4">
  <nav class="flex items-center justify-between py-4">
    <div>{{breadcrumbs}}</div>
  </nav>

 <div class="container mx-auto py-4 px-6">
   <div class="flex flex-col md:flex-row">
    <aside class="w-full md:w-1/4 pr-4">
      {{#if source_filters}}
      <section class="bg-gray-100 p-4 rounded-lg">
        <h3 class="text-lg font-semibold mb-2">{{t 'filter_source'}}</h3>
        <ul class="space-y-2">
          {{#each source_filters}}
          <li>
            {{#if selected}}
            <a href="{{url}}" class="text-blue-500" aria-current="page">{{name}}</a>
            {{else}}
            <a href="{{url}}" class="text-gray-700">{{name}}</a>
            {{/if}}
            <span class="text-sm text-gray-500">({{count}})</span>
          </li>
          {{/each}}
        </ul>
      </section>
      {{/if}}
    </aside>

    <section id="main-content" class="w-full md:w-3/4">
      <h1 class="text-2xl font-bold mb-4">
        {{#if results}}{{t 'results' query=query count=results_count}}{{/if}}
      </h1>
      {{#if results}}
      <ul class="space-y-4">
        {{#each results}}
        <li class="border-b border-gray-200 pb-4 mb-4">
          <article>
            <header>
              <h2 class="text-xl font-semibold"><a href="{{url}}" class="text-blue-500">{{title}}</a></h2>
              <div class="flex items-center space-x-2 text-gray-500 text-sm">
                <!-- Icons and metadata here -->
              </div>
            </header>
            <p class="mt-2 text-gray-700">{{text}}</p>
          </article>
        </li>
        {{/each}}
      </ul>
      {{else}}
      <div class="text-center py-8">
        <p class="text-lg text-gray-600">{{t 'no_results_found'}}</p>
        <!-- Additional no results content -->
      </div>
      {{/if}}
    </section>
  </div>
  {{pagination}}
</div>
